{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@models/*": ["./src/models/*"],
      "@engine/*": ["./src/engine/*"],
      "@lib/*": ["./src/lib/*"],
      "@api/*": ["./src/api/*"]
    }
  }
}
